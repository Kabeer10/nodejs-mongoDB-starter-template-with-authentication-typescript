{
  "name": "nodejs-mongodb-starter-template-with-authentication-typescript",
  "version": "1.0.0",
  "main": "app.js",
  "repository": "https://github.com/Kabeer10/nodejs-mongoDB-starter-template-with-authentication-typescript",
  "author": "Abdul Kabeer",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "nodemon --watch src/* --exec ts-node ./src/app.ts",
    "start": "node ./build/src/app.js",
    "check-format": "prettier --check .",
    "check-lint": "eslint . --ext ts --ext tsx --ext js",
    "check-types": "tsc --noEmit",
    "format": "prettier --write .",
    "lint:fix": "eslint ./src/** --fix",
    "build": "tsc",
    "test-all": "npm run check-format && npm run check-lint && npm run build",
    "prepare": "husky install"
  },
  "dependencies": {
    "body-parser": "^1.20.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "geoip-lite": "^1.4.6",
    "helmet": "^6.0.0",
    "joi": "^17.6.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.6.7",
    "morgan": "^1.10.0",
    "nodemailer": "^6.8.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^7.1.2",
    "randomstring": "^1.2.3",
    "rate-limiter-flexible": "^2.4.0",
    "typescript": "*"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.4",
    "@types/passport": "^1.0.11",
    "@types/passport-jwt": "^3.0.7",
    "@types/passport-local": "^1.0.34",
    "@types/randomstring": "^1.1.8",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1"
  }
}
